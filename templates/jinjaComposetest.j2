version: "3.8"

services:
  ubuntu:
    image: ubuntu:latest
    container_name: my_ubuntu_container
    networks:
      lan:
    command: sleep infinity

networks:
  lan:
    driver: macvlan
    driver_opts:
      parent: bridge
    ipam:
      config:
        - subnet: 192.168.1.0/24
          gateway: 192.168.1.1
